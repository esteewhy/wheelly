<RelativeLayout
	xmlns:android			="http://schemas.android.com/apk/res/android"
	android:layout_width	="wrap_content"
	android:layout_height	="56dp"
	android:paddingRight	="12dp">
	
	<TextView android:id="@+id/indicator" style="@style/Indicator" />
	<TextView android:id="@+id/date" style="@style/Date" />
	
	<TextView android:id		="@+id/cost"
		android:layout_width	="wrap_content"
		android:layout_height	="wrap_content"
		android:layout_alignParentRight="true"
		android:singleLine		="true"
		android:text			="$12.00"
		android:textAppearance	="?android:attr/textAppearanceSmall"/>
	
	<TextView android:id	="@+id/destination"
		style					="@style/LocationString"
		android:layout_toRightOf="@id/date"
		android:layout_toLeftOf	="@id/cost"
		android:layout_marginLeft="5dip"
		android:singleLine		="true"
		android:textStyle		="bold"/>
	
	<TextView
		android:id				="@+id/mileage"
		android:text			="14.88"
		android:textAppearance	="?android:attr/textAppearanceLarge"
		android:layout_alignParentBottom	="true"
		android:layout_marginRight	="3dip"
		android:layout_below	="@id/date"
		android:layout_alignLeft="@id/date"
		android:layout_height	="wrap_content"
		android:layout_width	="wrap_content"/>
		
	<TextView android:id		="@+id/fuel_uom"
		android:gravity			="center_vertical"
		android:layout_width	="wrap_content"
		android:layout_height	="wrap_content"
		android:layout_alignParentRight="true"
		android:layout_alignBaseline="@id/mileage"
		android:textAppearance	="?android:attr/textAppearanceLarge"
		android:textColor		="#ccc"
		android:text			="L"/>
		
	<TextView android:id		="@+id/fuel"
		android:layout_toLeftOf="@id/fuel_uom"
		android:gravity			="center_vertical"
		android:layout_marginLeft	="5dip"
		android:layout_marginRight	="3dip"
		android:layout_width	="wrap_content"
		android:layout_height	="wrap_content"
		android:layout_alignBaseline="@id/mileage"
		android:textAppearance	="?android:attr/textAppearanceLarge"
		android:singleLine		="true"
		android:text			="25.4"
		android:textColor		="@color/negative_amount"/>
	
	<LinearLayout
			android:layout_marginLeft="5dip"
			android:layout_below="@id/destination"
			android:layout_toRightOf	="@id/mileage"
			android:layout_toLeftOf="@id/fuel"
			android:layout_alignParentBottom="true"
			android:gravity="center_vertical"
			android:layout_height	="wrap_content"
			android:layout_width	="wrap_content">
			
			<TextView android:id	="@+id/start_place"
				style		="@style/LocationText"
				android:drawableLeft	="@drawable/hb_start" />
				
			<TextView android:id	="@+id/stop_place"
				style		="@style/LocationText"
				android:drawableLeft	="@drawable/hb_stop" />
	</LinearLayout>
</RelativeLayout>