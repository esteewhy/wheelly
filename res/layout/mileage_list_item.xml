<RelativeLayout
	xmlns:android			="http://schemas.android.com/apk/res/android"
	android:layout_width	="wrap_content"
	android:layout_height	="wrap_content"
	android:paddingLeft		="10dp"
	android:paddingRight	="12dp">
	
	<TextView
		android:layout_width	="wrap_content"
		android:layout_height	="wrap_content"
		android:singleLine		="true"
		android:id				="@+id/date"
		android:text			="2011-03-21 09:01"
		android:textSize		="10dp"
		android:paddingTop		="2dp" />
	
	<TextView android:id		="@+id/cost"
		android:layout_width	="wrap_content"
		android:layout_height	="wrap_content"
		android:layout_alignParentRight="true"
		android:singleLine		="true"
		android:text			="$12.00"
		android:textAppearance	="?android:attr/textAppearanceSmall"/>
	
	<TextView style				="@style/LocationString"
		android:layout_toRightOf="@id/date"
		android:layout_toLeftOf	="@id/cost"
		android:layout_marginLeft="5dip"
		android:id				="@+id/destination"
		android:singleLine		="true"
		android:layout_weight	="1"
		android:textStyle		="bold"/>
	
	<LinearLayout
		android:layout_height	="wrap_content"
		android:id				="@+id/layout"
		android:layout_alignLeft="@id/date"
		android:layout_below	="@id/date"
		android:layout_width	="fill_parent">
		
		<TextView
			android:id				="@+id/mileage"
			android:text			="283.5"
			android:textAppearance	="?android:attr/textAppearanceLarge"
			android:layout_alignParentLeft	="true"
			android:layout_marginRight	="3dip"
			android:layout_height	="wrap_content"
			android:layout_width	="wrap_content"/>
		
		<LinearLayout
			android:layout_weight	="1"
			android:layout_marginLeft="5dip"
			android:layout_width	="wrap_content"
			android:layout_height	="fill_parent">
			
			<TextView
				style		="@style/LocationText"
				android:id				="@+id/start_place"
				android:drawableLeft	="@drawable/hb_start"/>
				
			<TextView
				style		="@style/LocationText"
				android:id	="@+id/stop_place"
				android:drawableLeft	="@drawable/hb_stop" />
		</LinearLayout>
		
		<TextView android:id		="@+id/fuel"
			android:gravity			="center_vertical"
			android:layout_marginLeft	="5dip"
			android:layout_marginRight	="3dip"
			android:layout_width	="wrap_content"
			android:layout_height	="wrap_content"
			android:layout_alignParentTop	="true"
			android:textAppearance	="?android:attr/textAppearanceLarge"
			android:singleLine		="true"
			android:text			="25.4"
			android:textColor		="@color/negative_amount"/>
		
		<TextView android:id		="@+id/fuel_uom"
			android:gravity			="center_vertical"
			android:layout_width	="wrap_content"
			android:layout_height	="wrap_content"
			android:layout_alignParentRight="true"
			android:layout_alignParentTop="true"
			android:textAppearance	="?android:attr/textAppearanceLarge"
			android:textColor		="#ccc"
			android:text			="L"/>
	</LinearLayout>
	
</RelativeLayout>