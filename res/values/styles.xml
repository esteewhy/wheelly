<?xml version="1.0" encoding="utf-8"?>
<resources>
	<style name="Indicator">
		<item name="android:background">@color/sync_unknown</item>/
		<item name="android:layout_alignParentLeft">true</item>
		<item name="android:layout_height">fill_parent</item>
		<item name="android:layout_width">3dp</item>
		<item name="android:layout_marginBottom">3dp</item>
		<item name="android:layout_marginTop">3dp</item>
	</style>
	
	<style name="Date">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_alignParentTop">true</item>
		<item name="android:singleLine">true</item>
		<item name="android:layout_toRightOf">@id/indicator</item>
		<item name="android:layout_marginLeft">10dp</item>
		<item name="android:text">2011-03-21 09:01</item>
		<item name="android:paddingTop">2dp</item>
	</style>
	
	<style name="TextAppearance">
		<item name="android:textStyle">normal</item>
		<item name="android:antialias">true</item>
		<item name="android:textColor">#FF000000</item>
	</style>
	<style name="TextAppearance.PositiveAmount">
		<item name="android:textColor">#39b54a</item>
	</style>
	<style name="TextAppearance.NegativeAmount">
		<item name="android:textColor">#f26522</item>
	</style>
	<style name="TextAppearance.NeutralAmount">
		<item name="android:textColor">#FFFF00</item>
	</style>
    <style name="UpDownButton">
        <item name="android:background">@drawable/btn_circle</item>
        <item name="android:src">@drawable/ic_btn_round_updown</item>
    </style>
	<style name="ButtonBar"> 
		<item name="android:paddingTop">5dip</item> 
		<item name="android:paddingLeft">4dip</item> 
		<item name="android:paddingRight">4dip</item> 
		<item name="android:paddingBottom">1dip</item> 
		<item name="android:background">@android:drawable/bottom_bar</item> 
	</style>	
	
	<style name="ProgressBarFuel" parent="@android:style/Widget.ProgressBar.Horizontal">
		<item name="android:progressDrawable">@drawable/progress_fuel</item>
		<item name="android:minHeight">12dip</item>
		<item name="android:maxHeight">12dip</item>
	</style>
	
	<style name="HeartbeatTypeIcon">
		<item name="android:layout_width">11dp</item>
		<item name="android:layout_height">11dp</item>
		<item name="android:layout_marginRight">3dp</item>
		<item name="android:layout_marginTop">2dp</item>
		<item name="android:layout_gravity">center_vertical</item>
		<item name="android:layout_alignParentRight">true</item>
	</style>
	<style name="HeartbeatTypeIcon.Refuel">
		<item name="android:contentDescription">@string/refuels</item>
		<item name="android:src">@drawable/hb_refuel</item>
	</style>
	<style name="HeartbeatTypeIcon.Start">
		<item name="android:contentDescription">@string/start</item>
		<item name="android:src">@drawable/hb_start</item>
	</style>
	<style name="HeartbeatTypeIcon.Stop">
		<item name="android:contentDescription">@string/stop</item>
		<item name="android:src">@drawable/hb_stop</item>
	</style>
	<style name="LocationString">
		<item name="android:drawableLeft">@drawable/hb_dest</item>"
		<item name="android:ellipsize">marquee</item>
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
	</style>
	
	<style name="LocationText" parent="@style/LocationString">
		<item name="android:layout_weight">.5</item>
		<item name="android:text">Суми, Червоногвардійська</item>
		<item name="android:layout_width">fill_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
	</style>
</resources>