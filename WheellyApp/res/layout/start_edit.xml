<LinearLayout
	xmlns:android	="http://schemas.android.com/apk/res/android"
	xmlns:wheelly	="http://schemas.android.com/apk/res/com.wheelly"
	android:layout_width	="fill_parent"
	android:layout_height	="fill_parent"
	android:orientation		="vertical">
	
	<ScrollView
		android:layout_width	="fill_parent"
		android:layout_height	="0dp"
		android:layout_weight	="1">
		
		<LinearLayout
			android:layout_width	="fill_parent"
			android:layout_height	="wrap_content"
			android:orientation		="vertical"
			android:id				="@+id/list">
			
			<fragment
				class		="com.wheelly.app.HeartbeatInput"
				android:id	="@+id/heartbeat"
				android:layout_height	="wrap_content"
				android:layout_width	="fill_parent" /> 
			
			<include
				layout="@layout/edit_divider" />
			
			<Button
				android:id				="@+id/bStart"
				android:text			="@string/start"
				android:drawableLeft	="@drawable/btn_start"
				android:layout_weight	="1"
				android:layout_height	="wrap_content"
				android:layout_width	="match_parent"/>
			
		</LinearLayout>
	</ScrollView>
	
	<include layout="@layout/save_and_new_buttons" />
	
</LinearLayout>	